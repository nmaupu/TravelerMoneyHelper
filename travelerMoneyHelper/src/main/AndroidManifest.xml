<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.maupu.android.tmh"
    android:versionCode="12"
    android:versionName="1.0.12" >

    <!-- http://developer.android.com/guide/topics/manifest/uses-sdk-element.html -->
    <uses-sdk android:minSdkVersion="17" android:targetSdkVersion="22"/>

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.maupu.android.tmh.core.TmhApplication"
        android:icon="@drawable/tmh_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.GreenDroid.Light.NoTitleBar"
        android:allowBackup="true" >

        <!-- Main Activity -->
        <activity
            android:name=".ViewPagerOperationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageCategoryActivity"
            android:noHistory="false" />
        <activity
            android:name=".ManageCurrencyActivity"
            android:noHistory="false" />
        <activity
            android:name=".ManageAccountActivity"
            android:noHistory="false" />
        <activity android:name=".ManageOperationActivity" />
        <activity android:name=".AddOrEditCurrencyActivity" />
        <activity android:name=".AddOrEditCategoryActivity" />
        <activity android:name=".AddOrEditOperationActivity" />
        <activity android:name=".AddOrEditAccountActivity" />
        <activity android:name=".StatsActivity" />
        <activity android:name=".PreferencesActivity" />
        <activity android:name=".WithdrawalActivity" />
        <activity android:name=".CategoryChooserActivity" />
    </application>

</manifest>
