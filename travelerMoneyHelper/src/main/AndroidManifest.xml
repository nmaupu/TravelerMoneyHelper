<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.maupu.android.tmh"
    android:versionCode="205"
    android:versionName="2.0.5">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.maupu.android.tmh.core.TmhApplication"
        android:icon="@drawable/tmh_icon_128"
        android:label="@string/app_name"
        android:theme="@style/TmhTheme"
        android:allowBackup="true">

        <!-- Main Activity -->
        <activity
            android:name=".FirstActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageCategoryActivity"
            android:noHistory="false" />
        <activity
            android:name=".ManageCurrencyActivity"
            android:noHistory="false" />
        <activity
            android:name=".ManageAccountActivity"
            android:noHistory="false" />
        <activity android:name=".ManageOperationActivity" />
        <activity android:name=".AddOrEditCurrencyActivity" />
        <activity android:name=".AddOrEditCategoryActivity" />
        <activity android:name=".AddOrEditOperationActivity" />
        <activity android:name=".AddOrEditAccountActivity" />
        <activity android:name=".StatsActivity" />
        <activity
            android:name=".PreferencesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".WithdrawalActivity" />
        <activity android:name=".ConverterActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>
