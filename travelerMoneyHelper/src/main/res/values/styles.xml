<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MaterialDrawerTheme.Light.TranslucentStatus is a noActionBar theme -->
    <style name="TmhBaseTheme" parent="MaterialDrawerTheme.Light.TranslucentStatus">
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="snackbarStyle">@style/Widget.Material3.Snackbar</item>
    </style>

    <style name="TmhMaterial">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Different colors for floating text is needed because
    MaterialEditText applies an alpha on colors ... -->

    <style name="TmhMaterialEditText" parent="@style/TmhMaterial">
        <item name="met_floatingLabel">normal</item>
        <item name="met_textColorHint">@color/light_gray</item>
        <item name="met_floatingLabelTextColor">@color/gray</item>
    </style>

    <style name="TmhMaterialSpinner" parent="TmhMaterial">
        <item name="ms_enableFloatingLabel">true</item>
        <item name="ms_multiline">false</item>
        <item name="ms_thickness">2px</item>
        <item name="ms_hintColor">@color/light_gray</item>
        <item name="ms_floatingLabelColor">@color/light_gray</item>
        <item name="ms_alignLabels">false</item>
        <item name="android:paddingLeft">0px</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">400dp</item>
    </style>

</resources>
