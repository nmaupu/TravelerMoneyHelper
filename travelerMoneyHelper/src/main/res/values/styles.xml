<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MaterialDrawerTheme.Light.TranslucentStatus is a noActionBar theme -->
    <style name="TmhBaseTheme" parent="MaterialDrawerTheme.Light.TranslucentStatus">
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TmhMaterial">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Different colors for floating text is needed because
    MaterialEditText applies an alpha on colors ... -->

    <style name="TmhMaterialEditText" parent="TmhMaterial">
        <item name="met_floatingLabel">normal</item>
        <item name="met_textColorHint">@color/light_gray</item>
        <item name="met_floatingLabelTextColor">@color/gray</item>
    </style>

    <style name="TmhMaterialSpinner" parent="TmhMaterial">
        <item name="ms_enableFloatingLabel">true</item>
        <item name="ms_multiline">false</item>
        <item name="ms_thickness">2px</item>
        <item name="ms_hintColor">@color/light_gray</item>
        <item name="ms_floatingLabelColor">@color/light_gray</item>
        <item name="ms_alignLabels">false</item>
        <item name="android:paddingLeft">0px</item>
    </style>
</resources>