<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" tools:showIn="@layout/stats">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="5sp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:minHeight="190dp"
                        android:minWidth="190dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp" android:gravity="top">
                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_avg1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_avg_day"
                                    android:paddingRight="10sp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_column="0"/>
                                <TextView
                                    android:id="@+id/text_avg1_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="€"
                                    android:textSize="10sp"
                                    android:gravity="right"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_avg1_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textSize="10sp"
                                    android:textStyle="italic"
                                    android:layout_column="2"/>
                            </TableRow>
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_avg2_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="US$"
                                    android:textSize="10sp"
                                    android:gravity="right"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_avg2_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="italic"
                                    android:text="10,000,000.00"
                                    android:textSize="10sp"
                                    android:layout_column="2"/>
                            </TableRow>
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_avg1_cat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hébergement"
                                    android:paddingRight="10sp"
                                    android:textStyle="normal"
                                    android:textSize="10sp"
                                    android:layout_column="0"/>
                                <TextView
                                    android:id="@+id/text_avg1_cat_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="€"
                                    android:textSize="10sp"
                                    android:gravity="right"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_avg1_cat_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textSize="10sp"
                                    android:textStyle="italic"
                                    android:layout_column="2"/>
                            </TableRow>
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_avg2_cat_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:textSize="10sp"
                                    android:text="US$"
                                    android:gravity="right"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_avg2_cat_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="italic"
                                    android:text="10,000,000.00"
                                    android:textSize="10sp"
                                    android:layout_column="2"/>
                            </TableRow>

                            <TableRow android:layout_marginBottom="3sp">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray"
                                    android:layout_span="3"/>
                            </TableRow>

                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_total1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stats_total"
                                    android:paddingRight="10sp"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_column="0"/>
                                <TextView
                                    android:id="@+id/text_total1_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="€"
                                    android:gravity="right"
                                    android:textSize="10sp"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_total1_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textStyle="italic"
                                    android:textSize="10sp"
                                    android:layout_column="2"/>
                            </TableRow>
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_total2_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="US$"
                                    android:gravity="right"
                                    android:textSize="10sp"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_total2_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="italic"
                                    android:text="10,000,000.00"
                                    android:textSize="10sp"
                                    android:layout_column="2"/>
                            </TableRow>
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_total1_cat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hébergement"
                                    android:paddingRight="10sp"
                                    android:textSize="10sp"
                                    android:textStyle="normal"
                                    android:layout_column="0"/>
                                <TextView
                                    android:id="@+id/text_total1_cat_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="€"
                                    android:textSize="10sp"
                                    android:gravity="right"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_total1_cat_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textStyle="italic"
                                    android:textSize="10sp"
                                    android:layout_column="2"/>
                            </TableRow>
                            <TableRow android:layout_marginBottom="3sp">
                                <TextView
                                    android:id="@+id/text_total2_cat_currency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="5sp"
                                    android:text="US$"
                                    android:textSize="10sp"
                                    android:gravity="right"
                                    android:layout_column="1"/>
                                <TextView
                                    android:id="@+id/text_total2_cat_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="italic"
                                    android:text="10,000,000.00"
                                    android:textSize="10sp"
                                    android:layout_column="2"/>
                            </TableRow>

                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/details_chart"
                    android:minHeight="200dp"
                    android:minWidth="280dp"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:id="@+id/marker"
                android:layout_toRightOf="@id/pie_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test text"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>